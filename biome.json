{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"maxSize": 100000000,
		"ignore": [
			"dist/*",
			"sw.js",
			"*.md",
			"generated.ts",
			"package.json",
			"tsconfig.json",
			"tsconfig.tsbuildinfo",
			"index.html",
			"next.config.js"
		]
	},
	"javascript": {
		"formatter": {
			"indentWidth": 2,
			"quoteStyle": "single",
			"trailingComma": "none",
			"indentStyle": "space"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": { "useKeyWithClickEvents": "off" },
			"correctness": {
				"useExhaustiveDependencies": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"useSingleCaseStatement": "error",
				"useFragmentSyntax": "error",
				"noNamespace": "error",
				"useBlockStatements": "error",
				"useCollapsedElseIf": "error",
				"useShorthandArrayType": "error",
				"useShorthandAssign": "error"
			},
			"nursery": {
				"noUnusedImports": "error",
				"useGroupedTypeImport": "error",
				"useAwait": "error"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"recommended": true
		}
	}
}
